@page "/ritten/bekijken/{Id:int}"

<h1>Rit bekijken</h1>

@if (rit != null)
{
    <table class="table">
        <thead>
        <tr>
            <th>Gebruiker</th>
            <th>Auto</th>
            <th>Kilometers</th>
            <th>Begin</th>
            <th>Eind</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>@gebruiker.Voornaam @gebruiker.Achternaam</td>
            <td>@auto.Merk @auto.Model</td>
            <td>@rit.Kilometers</td>
            <td>@rit.Begin</td>
            <td>@rit.End</td>
        </tr>
        </tbody>
    </table>
    
    <h2>Adressen</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Straat</th>
            <th>Huisnummer</th>
            <th>Plaats</th>
            <th>Land</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var adres in rit.Adressen)
        {
            <tr>
                <td>@adres.Straat</td>
                <td>@adres.Huisnummer</td>
                <td>@adres.Plaats</td>
                <td>@adres.Land</td>
            </tr>
        }
        </tbody>
    </table>
}
<br />
<button type="submit" class="mt-3 btn btn-secondary" @onclick="Cancel">Terug naar overzicht</button>